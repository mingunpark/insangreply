<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="onetwopunch.seoulinsangshot.com.seoulinsangshot">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.BaseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.MainActivity" />
        <activity
            android:name=".View.PrimaryActivity"
            android:label="@string/title_activity_primary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.DetailActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".View.SelectActivity" />
        <activity android:name=".View.Best_ReplyActivity" />
        <activity android:name=".View.PostActivity" />
        <activity android:name=".View.TipActivity"></activity>
    </application>

</manifest>